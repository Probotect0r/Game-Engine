
public class Screen {

	int renderStartPoint;
	Game game;
	SpriteSheet spriteSheet;
	int height;
	int width;
	int [][] pixels2D;
	public Screen(Game game, SpriteSheet sheet, int height, int width) {
		this.game = game; 
		this.spriteSheet = sheet;
		this.height = height;
		this.width = width;
		pixels2D = new int[height][width];
		
	}
	
	public void render(){
		int[][] tileData = new int[8][8];
		tileData = spriteSheet.getTileData(6,0);
		
		for (int row1=0; row1<height; row1 = row1+8){
			for (int column1=0; column1<width; column1 = column1+8){		
				for (int row = row1; row<(row1+8); row++){
					for(int column = column1; column<(column1+8); column++){
						pixels2D[row][column] = tileData[row%8][column%8];						
					}					
				}				
			}
		}		
		game.converTo1D(pixels2D);
	}

}
