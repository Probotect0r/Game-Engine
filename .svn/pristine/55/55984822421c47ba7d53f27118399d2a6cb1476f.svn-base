
public class Screen {

	int xOffSet = 0;
	int yOffSet = 0;
	Game game;
	SpriteSheet spriteSheet;
	Level level; 
	int height;
	int width;
	int [][] pixels2D;
	Tile[][] allTileData = new Tile[15][20];
	public Screen(Game game, SpriteSheet sheet, int height, int width, Level level) {
		this.game = game; 
		this.spriteSheet = sheet;
		this.height = height;
		this.width = width;
		this.level = level;
		pixels2D = new int[height][width];
		allTileData = level.getAllTileData();
		
			
	}
	
	public void render(){
		
		for(int i=0; i<height; i++){
			for(int j=0; j<width; j++){
				pixels2D[i][j] = ((255<<24) + (0<<16) + (0<<8) + (0));
			}
		}
		int xTilePixel = 0;
		int yTilePixel = 0;
		int[][] tempTileData = new int[8][8];	
		int index=0;
		int index2 = 0;
		
		for(int i=0; i<15; i++){
			for(int j=0; j<20; j++){	
				xTilePixel = allTileData[i][j].getXPos() * 8 + xOffSet;				
				yTilePixel = allTileData[i][j].getYPos() * 8 + yOffSet;	
				tempTileData = allTileData[i][j].getTilePixelData();
				for (int row = yTilePixel; row<yTilePixel+8; row++){
					index2=0;
					for (int column=xTilePixel; column< xTilePixel+8; column++){
						if((row < height && column < width) && (row >= 0 && column >= 0)){
							pixels2D[row][column] = tempTileData[index][index2];
							index2++;
						}
						index++;
					}					
				}	
					
			}
		}
		
		game.converTo1D(pixels2D);
		
		
		
		
	}

}
