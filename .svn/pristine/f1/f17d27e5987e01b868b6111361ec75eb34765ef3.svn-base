
public class Tile {
	private final int GRASS = 1;
	private final int STONE = 2;
	private final int WATER = 3;
	private final int SAND = 4;

	int xPos; 
	int yPos; 
	int id;
	boolean isSolid;
	SpriteSheet sheet; 
	int[][] tilePixelData;

	public Tile(int id, SpriteSheet sheet, int xPos, int yPos, boolean isSolid) {
		this.id = id;
		this.xPos = xPos;
		this.yPos = yPos; 
		this.isSolid = isSolid;
		this.sheet = sheet;
		if (id == GRASS) tilePixelData = sheet.getTileData(0, 0);
		
		else if (id == STONE) tilePixelData = sheet.getTileData(2,0);
		
		else if (id == WATER) tilePixelData = sheet.getTileData(4,0);
		
		else if (id == SAND) tilePixelData = sheet.getTileData(8,0);		
		
		

	}
	
	public int[][] getTilePixelData(){
		
		return tilePixelData;
	}
	
	public int getID(){
		return id;
	}
	
	public int getXPos(){
		return xPos;
	}
	
	public int getYPos(){
		return yPos;
	}

}
